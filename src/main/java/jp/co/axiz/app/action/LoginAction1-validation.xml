<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE validators PUBLIC
    "-//Apache Struts//1.0.3//EN"
    "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
   <field name="userId">
   <field-validator type="requiredstring">
   <message>ユーザIDを入力してください</message>
   </field-validator>
   <field-validator type="stringlength">
   <param name="maxLegth">10</param>
   <message>ユーザIDは${maxLength}文字までです</message>
   </field-validator>
   </field>

   <field name="pass">
  <field-validator type="requiredstring">
   <message>パスワードを入力してください</message>
   </field-validator>
   <field-validator type="stringlength">
   <param name="maxLegth">15</param>
   <message>パスワードは${maxLength}文字までです</message>
   </field-validator>
   </field>
   </validators>